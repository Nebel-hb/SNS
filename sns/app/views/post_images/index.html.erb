<% @post_images.each do |post_image| %>

<div>
  <P>ユーザー画像</p>
  <%= post_image.user.name %>
  <%= attachment_image_tag post_image, :image , :fill, 300 , 300 %>
<script>
  document.getElementById('heat').toggleClass(.heart)
</script>
  <p id="heat"></p>
  <% if @post_image.favorited_by?(current_user) %>
    <p>
      <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
        ♥<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_image_favorites_path(@post_image), method: :post do %>
        ♡<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
    <% end %>


  <p><%= link_to "...", post_image_path(post_image.id) %></p>
  <p><%= post_image.caption %></p>
  <p><%= link_to "コメント#{post_image.post_comments.count} 件をすべて見る", post_image_path(post_image.id) %></p>
  <p><%= post_image.created_at.strftime('%m/%d/%H') %></p>
</div>
<% end %>


