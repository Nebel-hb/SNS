
<%= form_with model:@user, local:true do |f| %>
<h4>キャンセル</h4>
<h2>プロフィールを編集</h2>
  <%= f.submit "変更を保存" %>

  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60%>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputImage">プロフィール写真を変更</label>

  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputName">ユーザーネーム</label>
  <%= f.text_field :user_name, autofocus: true, id:"inputName", placeholder:"ユーザーネーム"%>


  <label for="inputName">自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>





<% end %>