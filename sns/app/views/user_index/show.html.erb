
<div class="profile-container">
  <h3 class="profile-name">
    <%= @user.name %></h3>
  
</div>

<% @post_images.each do |post_image| %>
<div>
  <%= link_to user_index_path(post_image.user.id) do %>
  <%= post_image.user.name %>
   <% end %>
  <p>投稿ユーザー画像</p>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  
<%= attachment_image_tag post_image, :image, :fill, 300 , 300 %>
<%= post_image.caption %>
 <p><%= post_image.created_at.strftime('%m/%d/%H') %></p>
 <p><%= link_to "コメント#{post_image.post_comments.count}件をすべて見る", post_image_path(post_image.id) %></p>
<% end %>
<%= paginate @post_images %>
